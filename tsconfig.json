{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"types": ["vite-plugin-glsl/ext"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": ".",
		"paths": {
			"assets/*": ["./src/assets/*"],
			"components/*": ["./src/components/*"],
			"layouts/*": ["./src/layouts/*"],
			"lib/*": ["./src/lib/*"],
			"styles/*": ["./src/styles/*"],
			"~/*": ["./src/*"]
		}
	}
}
